@model IEnumerable<TechHelperPOC.Web.Models.LinuxInfo>

@{
    ViewBag.Title = "Last Scanned Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>Last Scanned Report</h2>
    <div class="row" style="display:block" id="searButton">
        @using (Html.BeginForm("Report", "LinuxInfoes", FormMethod.Post))
        {
            <div class="col-md-2">
                <div class="input-group-sm">
                    <span class="input-group-btn">
                        @Html.DisplayName("Machine Name")
                    </span>
                    <span class="" id="machine">
                        @Html.DropDownList("machineName", null, htmlAttributes: new { @class = "form-control", id = "machineName" })
                    </span>
                </div>
            </div>

            <div class="col-md-2">
                <div class="input-group-sm">
                    <span class="input-group-btn">
                        @Html.DisplayName("Search")
                    </span>
                    <span>
                        <button class="btn btn-info form-control-static" id="search" type="submit">SEARCH</button>
                    </span>
                </div>
            </div>
            
            <div class="col-md-3 pull-right">
                <div class="input-group-sm" style="float:right">
                    <span class="input-group-btn">
                        @Html.DisplayName("Upload Script")
                    </span>
                    @using (Html.BeginForm())
                    {
                        <span>
                            @Html.ActionLink("Upload Linux audit script", "Create", "LinuxInfoes", null, htmlAttributes: new { @class = "form-control btn btn-info" })
                        </span>

                        @*@Html.Raw("<a href='/File/Cloudstaff_WinAudit.rar' id='download'> <span class='btn btn-info form-control'  style='float:right;'><span class='glyphicon glyphicon-download'></span> DOWNLOAD WINAUDIT</span> </a>")*@
                    }
                </div>
            </div>
        }
    </div>
</div>


<div>
    <table class="table table-bordered" style="margin-top:15px">
        <tr class="btn-info">
            <th>
                @Html.DisplayNameFor(model => model.Technician)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Site)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MachineName)
            </th>
            <th>
                @Html.DisplayName("Last Scanned")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayName("Action")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Technician)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Site)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MachineName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScannedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>

                <td>
                    @Html.ActionLink("View", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>