@model TechHelperPOC.Web.Models.RegisterViewModel
@{
    Layout = null;
}
@{
    ViewBag.Title = "Register";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body >
    <div class=" container">
    <div class="row">
        <div class="col-md-5 col-md-offset-3" style="background-color: #5bc0de; color:#ffffff; border-radius:5px;border-radius:5px; border-width:3px; border-color:#ffffff; border-style:solid;">
            <h2>@ViewBag.Title.</h2>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a new account.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Role", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @{var listItems = new List<System.Web.UI.WebControls.ListItem>
                 {
                    new System.Web.UI.WebControls.ListItem { Text = "Admin", Value="Admin" },
                    new System.Web.UI.WebControls.ListItem { Text = "Member", Value="Member" },
                 };
                        }
                        @Html.DropDownList("UserType", new SelectList(listItems, "Value", "Text"), htmlAttributes: new { @class = "form-control" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Register" />
                        @Html.ActionLink("Back to Main", "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-default" })
                    </div>
                </div>
            }
        </div>
    </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>

</html>
